<div class="row">
  <div class="col-2">
    <%= render 'public/genres/genre_side' %>
  </div>
  <div class="col-10">
    <h2>商品一覧<small>（全<%= @items.count %>件）</small></h2><br>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-3 m-1 d-flex flex-column border solid 1px">
          <div class="flex-grow-1"　style="width: 100%　display: flex; justify-content: center; align-items: center;">
            <% if item.image.attached? %>
              <%= image_tag item.image, class: "img-fluid mb-2" %>
            <% else %>
              <%= image_tag 'no_image.jpg', class: "img-fluid mb-2" %>
            <% end %>
          </div>
          <div class="text-center">
            <p><%= link_to item.name, item_path(item) %></p>
            <p>￥<%= item.add_tax_price.to_s(:delimited) %></p>
            <% if item.is_active? %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-muted">販売停止中</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>