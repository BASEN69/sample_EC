<div>
  <div class="offset-1">
    <h4><span style="background-color: gray;">配送先登録/一覧</span></h4>
  </div>
  <div class="col-8 mt-5">
    <%= form_with model: [current_customer,@address] do |f| %>
      <div class="row d-flex">
        <div class="col-3">
          <%= f.label :postal_code,"郵便番号" %>
        </div>
        <div class="form-group row col-4">
          <%= f.text_field :postal_code, class: "form-control", placeholder: "0000000(ハイフン無し)" %>
        </div>
      </div>
      <div class="row d-flex">
        <div class="col-3">
          <%= f.label :address,"住所" %>
        </div>
        <div class="form-group row col-7">
          <%= f.text_field :address, class: "form-control", placeholder: "住所" %>
        </div>
      </div>
      <div class="row d-flex">
        <div class="col-3">
          <%= f.label :name,"宛先" %>
        </div>
        <div class="form-group row col-4">
          <%= f.text_field :name, class: "form-control", placeholder: "宛先名" %>
        </div>
        <div class="offset-2 col-3">
          <%= f.submit "内容を更新", class: 'btn btn-success btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>