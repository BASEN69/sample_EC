<div>
  <div>
    <h4><span style="background-color: gray;">会員一覧</span></h4>
  </div>
  <table class="table table-hover col-10">
    <thead>
      <tr>
        <th class="col-1">会員ID</th>
        <th class="col-4">氏名</th>
        <th class="col-5">メールアドレス</th>
        <th class="col-2">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.first_name + customer.last_name, admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active? %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-muted">無効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>