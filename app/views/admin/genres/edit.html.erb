<div>
  <h4 class="offset-1"><span  style="background-color: gray;">ジャンル編集</span></h4><br>
  <% if @genre.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@genre.errors.count, "error") %> prohibited this genre from being saved:</h2>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
    <div class="col form-group row m-5">
      <div class="col-2 form-group row">
        <%= f.label :name, 'ジャンル名' %>
      </div>
      <div class="col-3 form-group row">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="col-2 form-group row ml-3">
        <%= f.submit '更新', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>