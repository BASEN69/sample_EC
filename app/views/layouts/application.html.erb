<!DOCTYPE html>
<html>
  <head>
    <title>sample_EC</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/ab55497b72.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <header>
      <div class="container">
        <div class="row navber navber-expand-lg navbar-dark bg-dark ">
          <div class="col">
            <a class="navber-brand display-3" href="/">LOG</a>
          </div>
          <% if customer_signed_in? %>
          <div class="nav-item col-2 p-4 text-center">
            <p class="text-light">ようこそ！<%= current_customer.first_name %>さん</p>
          </div>
          <div class="nav-item offset-1 col-2 p-4 text-center">
            <%= link_to 'マイページ', mypage_path, class: "btn btn-success" %>
          </div>
          <div class="nav-item col-2 p-4 text-center">
            <%= link_to '商品一覧', items_path, class: "btn btn-info" %>
          </div>
          <div class="nav-item col-2 p-4 text-center">
            <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "btn btn-info" %>
          </div>
          <% else %>
          <div class="nav-item offset-3 col-2 p-4 text-center">
            <%= link_to '新規登録', new_customer_registration_path, class: "btn btn-info" %>
          </div>
          <div class="nav-item col-2 p-4 text-center">
            <%= link_to 'ログイン', customer_session_path, class: "btn btn-success" %>
          </div>
          <% end %>
        </div>
      </div>
    </header>
    <main>
      <div class="container">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </main>
  </body>
</html>

